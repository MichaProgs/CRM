<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" >
	<BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
		<!-- FLEX NAVI -->
		<top>
			<!-- NO CONTENT NEEDED -->
		</top>
		<!-- FLEX NAVI END -->
		<center>
			<ScrollPane>
				<BorderPane>
					<top>
						<HBox spacing="10" alignment="CENTER_LEFT">
							<Label id="lblHeadline" text="Speicherpfade" />
						<padding>
							<Insets bottom="10" />
						</padding>
						</HBox>
					</top>
					<left>
						<VBox spacing="10">
						
							<Text text="Hier können Sie einen globalen Speicherort für alle Dokumente einstellen. So werden z.B. alle &#10;Angebote immer im selben Ordner gespeichert!" />
						
							<Label text="Angebote" />
							<Label text="Vorlage (*.docx-Datei):" />
							<HBox spacing="10" alignment="CENTER_LEFT">
								<TextField fx:id="tfPathOfferTemplate" disable="true" />
								<Button fx:id="btnPathOfferTemplate" text="..." />
							</HBox>
							<Label text="Speicherort" />
							<HBox spacing="10" alignment="CENTER_LEFT">
								<TextField fx:id="tfPathOfferSaving" disable="true" />
								<Button fx:id="btnPathOfferSaving" text="..." />
							</HBox>
						
						</VBox>					
					</left>
				<padding>
					<Insets bottom="10" left="10" right="10" top="10" />
				</padding>
				</BorderPane>
			</ScrollPane>
		</center>
	</BorderPane>
</AnchorPane>

