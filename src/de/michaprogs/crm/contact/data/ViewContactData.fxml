<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.michaprogs.crm.contact.data.ControllerContactData" styleClass="AnchorPaneContent">
	<VBox spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" >
		<TableView fx:id="tvContact" prefHeight="200">
			<columnResizePolicy>
      			<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
   			</columnResizePolicy>
			<columns>
				<TableColumn fx:id="tcContactSalutation" text="Anrede" prefWidth="80" minWidth="80" maxWidth="100" />
				<TableColumn fx:id="tcContactName" text="Name" prefWidth="250" minWidth="150" maxWidth="250" />
				<TableColumn fx:id="tcContactPhone" text="Telefon" prefWidth="180" minWidth="150" />
				<TableColumn fx:id="tcContactMobile" text="Mobil" prefWidth="180" minWidth="150" />
				<TableColumn fx:id="tcContactFax" text="Fax" prefWidth="180" minWidth="150" />
				<TableColumn fx:id="tcContactEmail" text="Email" prefWidth="280" minWidth="150" />
				<TableColumn fx:id="tcContactDepartment" text="Abteilung" prefWidth="180" minWidth="150" />
			</columns>
		</TableView>
		<HBox spacing="10" alignment="CENTER_RIGHT">
			<Button fx:id="btnContactAdd" text="Hinzufügen.." />
			<Button fx:id="btnContactEdit" text="Bearbeiten.." />
			<Button fx:id="btnContactDelete" text="Löschen" />
		</HBox>
	</VBox>
</AnchorPane>

