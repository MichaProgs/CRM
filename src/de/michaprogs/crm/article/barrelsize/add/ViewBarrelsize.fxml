<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.michaprogs.crm.article.barrelsize.add.ControllerBarrelsize">
	<VBox spacing="10">
	
		<HBox style="-fx-border-color: transparent transparent #E8E8E8 transparent">
			<Label text="Gebindegrößen" id="lblHeadline" />
		</HBox>
	
		<TableView fx:id="tvBarrelsize">
			<columnResizePolicy>
      			<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
   			</columnResizePolicy>
			<columns>
				<TableColumn minWidth="40" maxWidth="100" prefWidth="50" fx:id="tcBarrelsizeID" text="ID" />
				<TableColumn fx:id="tcBarrelsize" text="Bezeichnung" />
			</columns>
		</TableView>
		
		<HBox spacing="10" alignment="CENTER_LEFT">
			<Label text="Bezeichnung:" />
			<TextField fx:id="tfBarrelsize" />
			<Button fx:id="btnAdd" text="Hinzufügen" />
			<Button fx:id="btnAbort" text="Abbrechen" />
		</HBox>
	
	<padding>
		<Insets bottom="10" left="10" right="10" top="10" />
	</padding>
	</VBox>
</AnchorPane>

