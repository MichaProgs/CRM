<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.michaprogs.crm.article.search.ControllerArticleSearch">
	<BorderPane>
		<center>
			<VBox>
				<Label text="Artikel suchen" id="lblHeadline" />
				<BorderPane style="-fx-border-color: #E8E8E8 transparent transparent transparent">
					<top>
						<HBox spacing="10" alignment="CENTER_LEFT" >
							<Label text="Kurztext1:" />
							<TextField fx:id="tfSearchDescription1" />
							<Label text="Kurztext2:" />
							<TextField fx:id="tfSearchDescription2" />
							<Label text="Artikelnummer:"/>
							<TextField fx:id="tfSearchArticleID" />
							<Button fx:id="btnSearch" text="Suchen" />
						<padding>
							<Insets bottom="10" />
						</padding>
						</HBox>
					</top>
					<center>
						<TableView fx:id="tvArticleSearch" >
							<columnResizePolicy>
	                  			<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
	               			</columnResizePolicy>
							<columns>
								<TableColumn fx:id="tcArticleID" text="Artikelnummer" />
								<TableColumn fx:id="tcDescription1" text="Kurztext1" />
								<TableColumn fx:id="tcDescription2" text="Kurztext2" />
								<TableColumn fx:id="tcBarrelsize" text="Gebindegröße" />
								<TableColumn fx:id="tcBolting" text="Verschraubung" />
							</columns>
						</TableView>
					</center>
					<bottom>
						<HBox alignment="CENTER_RIGHT" spacing="10">
							<Button fx:id="btnSearchSelect" text="Auswählen" />
							<Button fx:id="btnSearchAbort" text="Abbrechen" />
						<padding>
							<Insets top="10" />
						</padding>
						</HBox>
					</bottom>
					<padding>
						<Insets top="10" />
					</padding>
				</BorderPane>
			</VBox>
		</center>
	<padding>
		<Insets top="10" bottom="10" left="10" right="10" />
	</padding>
	</BorderPane>
</AnchorPane>

