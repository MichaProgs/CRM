			</AnchorPane>
		</top>
		<!-- FLEX NAVI END -->
		<!-- CONTENT -->
		<left>
			<ScrollPane hbarPolicy="NEVER" fx:id="spSide">
				<BorderPane fx:id="bpSide">
					<top>
						<!-- SPACE FOR HEADLINE OR SOMETHING ELSE -->
					</top>
					<left>
						<VBox>
							<TitledPane fx:id="tpMainData" text="STAMMDATEN" id="tbSidenavigation">
