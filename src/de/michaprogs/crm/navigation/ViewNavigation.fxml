									<Button fx:id="btnOffer" text="ANGEBOT" id="btnSidebar" />
									<Button fx:id="btnOrder" text="BESTELLUNG" id="btnSidebar" />
									<Button text="LIEFERSCHEIN" id="btnSidebar" />
									<Button text="RECHNUNG" id="btnSidebar" />
