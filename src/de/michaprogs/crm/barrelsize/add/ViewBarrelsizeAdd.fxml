<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.michaprogs.crm.barrelsize.add.ControllerBarrelsizeAdd">
	<BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
		<!-- FLEX NAVI -->
		<top>
			<!-- NO CONTENT NEEDED -->
		</top>
		<!-- FLEX NAVI END -->
		<center>
			<ScrollPane>
				<BorderPane>
					<top>
						<HBox spacing="10" alignment="CENTER_LEFT">
							<Label id="lblHeadline" text="Gebindegrößen" />
							<Label fx:id="lblSubHeadline" />
						<padding>
							<Insets bottom="10" />
						</padding>
						</HBox>
					</top>
					<left>
						<VBox spacing="10">
						
							<HBox spacing="10" alignment="CENTER_LEFT">
								<Label text="Filter:" />
								<TextField fx:id="tfFilter" />
							</HBox>
						
							<TableView fx:id="tvBarrelsize">
								<columnResizePolicy>
					      			<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					   			</columnResizePolicy>
								<columns>
									<TableColumn fx:id="tcBarrelsizeID" text="ID" minWidth="40" maxWidth="100" prefWidth="50" />
									<TableColumn fx:id="tcBarrelsize" text="Bezeichnung" minWidth="80" maxWidth="450" prefWidth="400" />
								</columns>
							</TableView>
						
							<HBox spacing="10" alignment="CENTER_LEFT">
								<Label text="Bezeichnung:" />
								<TextField fx:id="tfBarrelsize" />
								<Button fx:id="btnAdd" text="Hinzufügen" />
								<Button fx:id="btnDelete" text="Löschen" />
							</HBox>
						
						</VBox>					
					</left>
				<padding>
					<Insets bottom="10" left="10" right="10" top="10" />
				</padding>
				</BorderPane>
			</ScrollPane>
		</center>
	</BorderPane>
</AnchorPane>
