<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ComboBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.michaprogs.crm.clerk.add.ControllerClerkAdd">
	<BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
		<!-- FLEX NAVI -->
		<top>
			<!-- NO CONTENT NEEDED -->
		</top>
		<!-- FLEX NAVI END -->
		<center>
			<ScrollPane>
				<BorderPane>
					<top>
						<HBox spacing="10" alignment="CENTER_LEFT">
							<Label id="lblHeadline" text="Sachbearbeiter" />
							<Label fx:id="lblSubHeadline" id="lblSubHeadline" />
						<padding>
							<Insets bottom="10" />
						</padding>
						</HBox>
					</top>
					<left>
						<VBox spacing="10">
						
							<TableView fx:id="tvClerk">
								<columnResizePolicy>
					      			<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					   			</columnResizePolicy>
								<columns>
									<TableColumn fx:id="tcSalutation" text="Anrede" />
									<TableColumn fx:id="tcName" text="Name" />
									<TableColumn fx:id="tcPhone" text="Telefon" />
									<TableColumn fx:id="tcFax" text="Fax" />
									<TableColumn fx:id="tcEmail" text="Email" />
									<TableColumn fx:id="tcDepartment" text="Abteilung" />
								</columns>
							</TableView>
							
							<HBox spacing="10" >
								<ComboBox fx:id="cbSalutation" promptText="Anrede" />
								<TextField fx:id="tfName" promptText="Name" />
								<TextField fx:id="tfPhone" promptText="Telefon" />
								<TextField fx:id="tfFax" promptText="Fax" />
								<TextField fx:id="tfEmail" promptText="Email" />
								<TextField fx:id="tfDepartment" promptText="Abteilung" />
								<Button text="Hinzufügen" fx:id="btnAdd" />
								<Button text="Löschen" fx:id="btnDelete" />
							</HBox>
						
						</VBox>					
					</left>
				<padding>
					<Insets bottom="10" left="10" right="10" top="10" />
				</padding>
				</BorderPane>
			</ScrollPane>
		</center>
	</BorderPane>
</AnchorPane>

